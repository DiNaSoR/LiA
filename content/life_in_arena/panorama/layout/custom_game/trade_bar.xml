<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/custom_game/trade_bar.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/trade_bar.js" />
	</scripts>


	<Panel class="TradeOverlayRoot">

		<Panel class="TradeMain">	
			<Label hittest="false" id="Tradename" class="TitleFont" text="#trade" />	
			<DropDown id="HeroPick" oninputsubmit="ColorChange()">

			</DropDown>

			<Panel class="images">

				<Image src="file://{images}/custom_game/trade_bar/gold.png" class="gold" />
				<Image src="file://{images}/custom_game/trade_bar/lumber.png" class="lumber" />			

			</Panel>	
						
			<Panel class="buttons">	

				<Button id="MinusGold">

				</Button>	

				<Label hittest="false" id="GoldEntry" class="TitleFont" text="0" />	

				<Button id="PlusGold">

				</Button>	

				<Button id="MinusLumber">

				</Button>

				<Label hittest="false" id="LumberEntry" class="TitleFont" text="0" />	

				<Button id="PlusLumber">

				</Button>	
			
			</Panel>	

			<Panel class="acceptdecline">	

				<Button id="accept">
					<Label hittest="false" id="accept_text" class="TitleFont" text="#accept" />	
				</Button>

				<Button id="decline">
					<Label hittest="false" id="decline_text" class="TitleFont" text="#decline" />	
				</Button>

			</Panel>	

		</Panel>
			<Button id="closedButton"
				onactivate="ClickHide()"
				>
				<Image src="file://{images}/custom_game/trade_bar/tradebuttt.png" id="TradeSign" />
				<Panel id="closedButtonInset">
					<Label text="" />
				</Panel>
			</Button>


		
		</Panel>
	
</root>