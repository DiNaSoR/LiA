<root>
    <styles>
 		<include src="file://{resources}/styles/dotastyles.css" />
        <include src="file://{resources}/styles/custom_game/lia_end_screen.css" />
    </styles>

    <scripts>
		<include src="file://{resources}/scripts/custom_game/lia_scoreboard_upd.js" />
        
       <include src="file://{resources}/scripts/custom_game/lia_end_screen.js" />
    </scripts>

	<Panel hittest="false" class="EndScreenRoot">
		<Panel hittest="false" class="EndScreenWindow">
			<Panel id="VictoryRow">
				<Panel id="WinningTeamLogo" />
				<Label id="EndScreenVictory" text="#custom_end_screen_victory_message" />
			</Panel>
			<Panel class="Legend">
				<Panel class="LegendPanel ScoreCol_TeamInfo" />
				<Panel class="LegendPanel ScoreCol_Hero" />
				<Panel class="LegendPanel ScoreCol_PlayerDetails" />
				<Label class="LegendPanel ScoreCol_TeamScore" text="#Kills:" />
				<Label class="LegendPanel ScoreCol_KillsBosses" text="#Bosses" />
				<Label class="LegendPanel ScoreCol_KillsCreeps" text="#Creeps" />
				<Label class="LegendPanel ScoreCol_Level" text="#LvL" />
				<Label class="LegendPanel ScoreCol_Deaths" text="#Deaths" />
				<Label class="LegendPanel ScoreCol_Rating" text="#Rating" />
			<!--	<Label class="LegendPanel ScoreCol_Items" text="#custom_end_screen_legend_items" />  -->
				
			</Panel>
			<Panel id="TeamsContainer" />
			<Button id="CloseButton" onactivate="Game.FinishGame();">
				<Label text="#CustomEndScreenClose" />
			</Button>
		</Panel>
	</Panel>
</root>
